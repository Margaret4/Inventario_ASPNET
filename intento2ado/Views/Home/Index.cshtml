@{
    ViewBag.Title = "Inventario";
}


<div class=" row mb-3'" >
    <div class="col-12 col-md-6">
        <select id="Select1">
            @foreach (var item in Model)
            {
                <option value=@item.id>
                    @item.nom
                </option>
            }


        </select>

    </div>
    <div class="col-12 col-md-6">
        <button class="btn btn-primary"><i class="far fa-edit"></i> @Html.ActionLink("Nuevo", "NuevoProd", "Home") </button>
    </div>

</div>
<div class="row">

    @foreach (var i in Model)
    {
        foreach (var item in i.prod)
        {
            <div>
                <div class="card mb-3 mr-3" style="width: 300px">
                    <div class="row no-gutters">
                        <div class="col-md-10">
                            <div class="card-body">
                                <h5>
                                    <asp:Label runat="server" Text="" CssClass="card-title">
                                        @item.nom
                                    </asp:Label>
                                </h5>
                                <asp:Label runat="server" Text="" CssClass="card-text">
                                    Nombre=@item.nom <br>
                                    Codigo=@item.id <br>
                                    Cantidad=@item.canti <br>
                                    Precio=@item.precio <br>
                                </asp:Label>

                                <button type="button" class="btn btn-danger " data-backdrop="false" data-dismiss="modal" data-toggle="modal" data-target="#@item.id">Borrar</button>

                                <a class="btn btn-primary right" href="~/Home/EditProd/@item.id"><i class="far fa-edit"></i>  Editar </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div id=@item.id class="modal" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Eliminar Producto</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p>¿Deea eliminar @item.nom?</p>
                        </div>
                        <div class="modal-footer">
                            <a class="btn btn-primary" href="~/Home/DeleteProd/@item.id"><i class="far fa-edit"></i>  Eliminar </a>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        </div>
                    </div>
                </div>
            </div>

        }
    }
</div>

