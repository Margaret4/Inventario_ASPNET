@model intento2ado.Models.compra

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>compra</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)

    <div class="form-group">
        @Html.LabelFor(model => model.prov, "prov", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("prov", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.prov, "", new { @class = "text-danger" })
        </div>
    </div>
    @Html.HiddenFor(model => model.fecha)
    @Html.HiddenFor(model => model.tot)
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}
<script type="text/javascript">
            $(document).ready(function () { $("#detalles").load("@(Url.Action("Index","detalle_c", new {  id = Model.id }))"); })

</script>
<br/>
<div id="detalles">

</div>

<div>

    @Html.ActionLink("Back to List", "Index")
</div>
