@model IEnumerable<intento2ado.Models.detalle_c>

@{
    ViewBag.Title = "Index";
    Layout = null;
}

<h2>Index</h2>

<p>
    <button class="btn btn-primary"><i class="fas fa-edit"></i> @Html.ActionLink("Create New", "Create", new { compra = ViewBag.compra })</button>
    
</p>
<table class="table table-striped table-bordered">
    <tr>
        <th>
            Producto
        </th>
        <th>
            Precio Unitario
        </th>
        <th>
            Cantidad
        </th>
        <th>
            Compra
        </th>
        <th>
            Subtotal
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.prod.nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.prec_unit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.canti)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.compra1.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tot)
            </td>
            <td>
                <a class="btn btn-primary right" href="~/detalle_c/Edit/@item.id"><i class="fas fa-edit"></i> Editar </a>
                <a class="btn btn-danger right" href="~/detalle_c/Delete/@item.id"><i class="fas fa-trash-alt"></i>Eliminar </a>
            </td>
        </tr>
    }
    <tr>
        <th>

        </th>
        <th>

        </th>
        <th>

        </th>
        <th>

        </th>
        <th>
            @ViewBag.tot
        </th>
        <th></th>
    </tr>

</table>
