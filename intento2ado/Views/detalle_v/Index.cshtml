@model IEnumerable<intento2ado.Models.detalle_v>

@{
    ViewBag.Title = "Index";
    Layout = null;
}

<h2>Detalles</h2>

<p>
    @Html.ActionLink("Añadir detalle", "Create", new { venta= ViewBag.venta})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.canti)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.monto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.prod.nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.venta1.dnivend)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.canti)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.monto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.prod.nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.venta1.dnivend)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id })
            </td>
        </tr>
    }
    <tr>
        <th>
            Total
        </th>
        <th>
            @ViewBag.tot
        </th>
        <th>
            
        </th>
        <th>
            
        </th>
        <th></th>
    </tr>
</table>
