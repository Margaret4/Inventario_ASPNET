@model IEnumerable<intento2ado.Models.detalle_v>

@{
    ViewBag.Title = "Index";
    Layout = null;
}

<h2>Detalles</h2>


<p>
    <button class="btn btn-primary"><i class="fas fa-edit"></i> @Html.ActionLink("Añadir detalle", "Create", new { id = ViewBag.venta }) </button>
    
</p>
<table class="table table-striped table-bordered">
    <tr>
        <th>
            Producto
        </th>
        <th>
            Cantidad
        </th>
        <th>
            Vendedor
        </th>
        <th>
            Sub total
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.prod.nom)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.canti)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.venta1.dnivend)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.monto)
            </td>
            <td>
                <a class="btn btn-primary right" href="~/detalle_v/Edit/@item.id"><i class="fas fa-edit"></i> Editar </a>
                <a class="btn btn-danger right" href="~/detalle_v/Delete/@item.id"><i class="fas fa-trash-alt"></i>Eliminar </a>

            </td>
        </tr>
    }
    <tr>
        <th>
            Total
        </th>
        <th>

        </th>
        <th>

        </th>
        <th>
            @ViewBag.tot
        </th>
        <th></th>
    </tr>
</table>
