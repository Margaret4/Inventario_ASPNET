@model intento2ado.Models.vend

@{
    ViewBag.Title = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<h3>Está seguro de eliminar al siguiente Usuario?</h3>
<div>
    <h4>Datos del Usuario</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <h5>DNI:</h5>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dni)
        </dd>
        <dt>
            <h5>Nombre:</h5>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nom)
        </dd>

        <dt>
            <h5>Contraseña:</h5>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pwd)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            @Html.ActionLink("Regresar a la Lista", "Index",null, new { @class = "btn btn-primary" })
        </div>
    }
</div>
