@model intento2ado.Models.venta

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crear</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>venta</h4>
    <hr />    
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)

    @Html.HiddenFor(model => model.tot)
    @Html.HiddenFor(model => model.fecha)

    <div class="form-group">
        @Html.LabelFor(model => model.dnivend, "dnivend", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("dnivend", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.dnivend, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Crear" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Regresar a  la lista", "Index")
</div>
