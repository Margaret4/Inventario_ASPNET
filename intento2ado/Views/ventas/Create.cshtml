@model intento2ado.Models.venta

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <h5>Numero de venta</h5>
            <div class="col-md-10">
                @Html.EditorFor(model => model.id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h3>Fecha</h3>
            <div class="col-md-10">
                <input class="date-picker" name="fecha"/>
                @Html.ValidationMessageFor(model => model.fecha, "", new { @class = "text-danger" })
                <script>
                    $(function () {
                        $(".datefield").datepicker();
                    });
                </script>
            </div>
        </div>

        <div class="form-group">
            <h3>Seleccione Vendedor</h3>
            <div class="col-md-10">
                @Html.DropDownList("dnivend", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.dnivend, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear venta" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
