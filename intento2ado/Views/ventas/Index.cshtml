@model IEnumerable<intento2ado.Models.venta>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <button class="btn btn-primary"><i class="fas fa-edit"></i> @Html.ActionLink("Nueva venta", "Create")</button>
    
</p>
<table class="table table-striped table-bordered">
    <tr>
        <th>
            Total
        </th>
        <th>
            Fecha
        </th>
        <th>
            Vendedor
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.tot)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.vend.nom)
        </td>
        <td>
            <a class="btn btn-primary right" href="~/ventas/Edit/@item.id"><i class="fas fa-edit"></i> Editar </a>
            <a class="btn btn-danger right" href="~/ventas/Delete/@item.id"><i class="fas fa-trash-alt"></i> Eliminar </a>
            
        </td>
    </tr>
}

</table>
